<head>
    <%- include('../partials/head'); %>
        <title>Cadastro de Médicos e Especialidades</title>
</head>

<body>
    <header class='container'>
        <%- include('../partials/header_logout_ADM'); %>
    </header>
    <main>
        <h2 class='text-center mt-5'>Cadastro de Especialidades</h2>
        <section class="cadastro container mt-4">
            <div class='row d-flex justify-content-center'>
                <div class='col-lg-6 col-md-6 col-sm-12'>
                    <form class='form-group' action="/med_esp/especialidade/cadastrar" method="post">

                        <input type="text" class='form-control' name="especialidades" placeholder="Digite aqui a especialidade">
                        <input type="hidden" name="idEsp">
                        <div class='mt-4'>
                            <button type="submit" class='btn btn-primary'>Cadastrar</button>
                            <button type="reset" class="btn btn-primary">Limpar</button>

                        </div>

                    </form>
                    <h2 class='text-center mt-5'> Cadastro de Médicos</h2>
                    <form action="/med_esp/medico/cadastrar" class='form-group mt-4' method="post">
                        <input type="text" class="form-control" name="nome" value="<%=resultado.nome%>" placeholder="Digite o nome do médico">
                        <select class='form-select mt-4' name="especialidade_select">
                            <option>Selecione a especialidade do médico</option>
                            <% resultado.forEach(e => { %>
                                <option>
                                    <%= e.especialidade %>
                                </option>
                                <% }); %>
                        </select>
                        <input type="hidden" name="idMed" value="<%=resultado._id%>">
                        <div class='mt-4'>
                            <button type="submit" class="btn btn-primary mb-5">Salvar</button>
                            <button type="reset" class="btn btn-primary mb-5">Limpar</button>

                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>
    <%- include('../partials/footer'); %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script src="/js/script.js"></script>
</body>

</html>