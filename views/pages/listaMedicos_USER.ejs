<!DOCTYPE html>
<html lang="en">

<!-- head indicando título de médicos e especialidas -->

<head>
    <%- include('../partials/head'); %>
        <title>Lista de Médicos</title>
</head>

<body>
    <!-- link para a header e logout -->
    <header>
        <%- include('../partials/header_logout_USER'); %>
    </header>

    <main>
        <!-- container - lista para usuários -->
        <h1 class='text-center mt-5 mb-5'>Lista de Médicos</h1>
        <section class="conteudo container">
            <div class='row'>
                <div class='col'>

                    <input class="my-2" autocomplete="off" type="text" id="myInput" placeholder="Nome do Médicos">
                </div>
                <div class='col'>

                    <input class="my-2" autocomplete="off" type="text" id="myInput2" placeholder="Nome do Médicos">
                </div>
            </div>
            <!-- tabela com lista de médicos para usuários -->
            <table id="tabela" class="table table-hover">
                <thead>
                    <th>Nome</th>
                    <th>Especialidade</th>
                </thead>
                <tbody id="tbody">
                    <!-- indica campo de pesquisa de especialidades e médicos -->
                    <% resultado.forEach(e=>{%>
                        <tr>
                            <td>
                                <%=e.nome %>
                            </td>
                            <td>
                                <%=e.especialidade_select %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </section>
    </main>

    <%- include('../partials/footer'); %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script type="text/javascript" src="../js/script.js"></script>
</body>

</html>