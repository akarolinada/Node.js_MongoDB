<!DOCTYPE html>
<html lang="en">

<!-- adiciona head com o título da lista -->

<head>
    <%- include('../partials/head'); %>
        <title>Lista de Médicos</title>
</head>

<body>
    <!-- indicação do botão de logout -->
    <header>
        <%- include('../partials/header_logout_ADM'); %>
    </header>

    <main>
        <!-- tabela de médicos para ADM -->
        <h1 class='text-center mt-5 mb-5'>Lista de Médicos</h1>
        <section class="conteudo container">
            <div>
                <!-- <span class="col-12 text-start">Pesquise pelo nome do Médico</span>
                <input class="my-2" type="text" id="myInput" onkeyup="pesquisarFunc()"
                    placeholder="Nome do Médicos"> -->
            </div>
            <table id="tabela" class="table table-hover">
                <thead>
                    <th>Nome</th>
                    <th>Especialidade</th>
                </thead>
                <tbody id="tbody">
                    <!-- filtro de médicos -->
                    <% resultado.forEach(e=>{
                        %>
                        <tr>
                            <td>
                                <%=e.nome %>
                            </td>
                            <td>
                                <%=e.especialidade_select %>
                            </td>
                            <!-- botões de editar e excluir setados para cada uma das médicos -->
                            <td class="d-flex justify-content-end "><a href="/med_esp/editarMed/<%=e._id %>"><button
                                        class='btn btn-primary  mx-2'>Editar</button></a>

                                <a href="/med_esp/deletarMed/<%=e._id %>"><button
                                        class='btn btn-danger'>Excluir</button></a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </section>
    </main>

    <%- include('../partials/footer'); %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script src="/js/script.js"></script>
</body>

</html>